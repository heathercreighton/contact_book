<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>

<div class="well", style="background: rgba(255, 255, 255, 0.7);); ">
<table class ="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Business name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><strong><%= contact.first_name %></strong></td>
        <td><strong><%= contact.last_name %></strong></td>
        <td><%= contact.business_name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.city %></td>
        <td><%= contact.state %></td>
        <td><%= contact.zip %></td>
        <td><%= contact.phone1 %></td>
        <td><%= contact.phone2 %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>
